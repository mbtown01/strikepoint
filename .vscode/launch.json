{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web app",
            "type": "debugpy",
            "request": "launch",
            "program": "app.py",
            "console": "internalConsole"
        },
        {
            "name": "Flask Video Producer",
            "type": "debugpy",
            "request": "launch",
            "module": "strikepoint.producer",
            "console": "internalConsole"
        },
        {
            "name": "capture",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/leptonDriver/Debug/capture",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/leptonDriver",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build capture",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
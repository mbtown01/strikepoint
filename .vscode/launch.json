{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web app (live)",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "internalConsole",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Web app (live, profile)",
            "type": "debugpy",
            "request": "launch",
            "module": "cProfile",
            "args": [
                "-o",
                "${workspaceFolder}/profile.prof",
                "main.py"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        },
        {
            "name": "Web app (testing)",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "internalConsole",
            "args": [
                "--input-recording",
                // "dev/data/demo-with-audio-2.bin"
                "dev/data/demo-1ball-calibrate3.bin"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "capture",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp/Debug/capture",
            "args": [
                "--frames",
                "10",
                "--fps",
                "1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/cpp",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "compile Debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "gtest_driver",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp/Debug/gtest_driver",
            "args": [
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/cpp",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "compile Debug",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
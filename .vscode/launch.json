{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Demo app",
            "type": "debugpy",
            "request": "launch",
            "program": "demo.py",
            "console": "internalConsole"
        },
        {
            "name": "Web app",
            "type": "debugpy",
            "request": "launch",
            "program": "app.py",
            "console": "internalConsole"
        },
        {
            "name": "Diagnose stuff",
            "type": "debugpy",
            "request": "launch",
            "program": "diagnose.py",
            "console": "internalConsole"
        },
        {
            "name": "Debug demo.c",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/driver/Debug/demo",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/driver",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "preLaunchTask": "build demo",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}